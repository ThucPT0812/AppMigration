<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@id/l_main_dialog_select"
             android:background="@android:color/transparent"
             android:onClick="closeDialogSelect"
             android:clickable="true"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/layx400"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/l_border_layout"
        android:padding="@dimen/layx5"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@id/dialog_select_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/layy5"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible"
            android:textStyle="bold"
            />

        <View
            android:id="@id/dialog_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layx1"
            android:layout_marginTop="@dimen/layy10"
            android:background="@color/black"
            android:visibility="visible" />

        <TextView
            android:id="@id/dialog_select_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layy5"
            android:layout_marginTop="@dimen/layy5"
            android:text="Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung Nội dung "
            android:textColor="#000006"
            android:textSize="@dimen/text_size_22" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layy5"
            android:layout_marginTop="@dimen/layy15"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@id/dialog_select_bt_accept"
                android:layout_width="@dimen/layx120"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="#0622f3"
                android:textSize="@dimen/text_size_26"
                android:background="@android:color/transparent"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>