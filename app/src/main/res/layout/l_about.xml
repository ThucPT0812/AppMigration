<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:tmall="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@id/ROOT_VIEW_ID"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:baselineAligned="false"
             android:orientation="vertical"
             android:background="@drawable/aus"
             android:scaleType="fitXY"
             tools:context=".screen.About" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/layx10"
        android:paddingRight="@dimen/layx10"
        >

        <!--<ImageView-->
            <!--android:id="@id/about_icon_flag"-->
            <!--android:layout_width="@dimen/layx150"-->
            <!--android:layout_height="@dimen/layy150"-->
            <!--android:background="@drawable/logo_migration"-->
            <!--android:layout_marginTop="@dimen/layy10"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/layx10"
            android:background="@drawable/l_border_layout"
            android:padding="@dimen/layx15"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@id/about_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_message1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                />

            <TextView
                android:id="@id/about_tv_description1"
                android:layout_marginTop="@dimen/layy15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_message2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"

                />

            <TextView
                android:layout_marginTop="@dimen/layy15"
                android:id="@id/about_tv_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_message3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                />

            <TextView
                android:id="@id/about_tv_description3"
                android:layout_marginTop="@dimen/layy15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_message4"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"

                />

            <Button
                android:layout_width="@dimen/layx180"
                android:layout_height="@dimen/layy50"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="TAKE TEST"
                android:paddingLeft="@dimen/layx30"
                android:textSize="@dimen/text_size_18"
                android:background="@drawable/d_selector_button_right"
                android:layout_gravity="right"
                android:id="@id/about_btn_take_test"
                android:layout_alignParentRight="true"
                />



        </LinearLayout>

    </RelativeLayout>

</FrameLayout>