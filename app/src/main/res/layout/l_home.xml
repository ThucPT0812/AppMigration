<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:tmall="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@id/ROOT_VIEW_ID"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:baselineAligned="false"
             android:orientation="vertical"
             android:background="@drawable/aus"
             android:scaleType="fitXY"
             tools:context=".screen.Home" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/layx10"
        android:paddingRight="@dimen/layx10"
        >

        <ImageView
            android:id="@id/home_icon_flag"
            android:layout_width="@dimen/layx200"
            android:layout_height="@dimen/layy200"
            android:layout_marginTop="@dimen/layy30"
            android:background="@drawable/logo_migration"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_icon_flag"
            android:layout_marginTop="@dimen/layx40"
            android:padding="@dimen/layx15"
            android:background="@drawable/l_border_layout"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layy20"
                >

                <TextView
                    android:id="@id/home_tv_full_name"
                    android:layout_width="@dimen/layx100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    />

                <EditText
                    android:id="@id/home_edt_full_name"
                    android:layout_width="@dimen/layx350"
                    android:layout_height="@dimen/layy45"
                    android:layout_toRightOf="@id/home_tv_full_name"
                    android:paddingLeft="@dimen/layx35"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_20"
                    android:background="@drawable/rounded_edittext"
                    />

                <ImageView
                    android:layout_width="@dimen/layx30"
                    android:layout_height="@dimen/layx30"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@id/home_edt_full_name"
                    android:layout_marginLeft="@dimen/layx5"
                    android:background="@drawable/user"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layy20"
                >

                <TextView
                    android:id="@id/home_tv_county_code"
                    android:layout_width="@dimen/layx100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    />

                <AutoCompleteTextView
                    android:id="@id/home_edt_country_code"
                    android:layout_width="@dimen/layx350"
                    android:layout_height="@dimen/layy45"
                    android:layout_toRightOf="@id/home_tv_county_code"
                    android:paddingLeft="@dimen/layx15"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_20"
                    android:completionThreshold="1"
                    android:hint="Country"
                    android:background="@drawable/rounded_edittext"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layy20"
                >

                <TextView
                    android:id="@id/home_tv_phone"
                    android:layout_width="@dimen/layx100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    />

                <EditText
                    android:id="@id/home_edt_phone"
                    android:layout_width="@dimen/layx350"
                    android:layout_height="@dimen/layy45"
                    android:layout_toRightOf="@id/home_tv_phone"
                    android:paddingLeft="@dimen/layx35"
                    android:textSize="@dimen/text_size_20"
                    android:background="@drawable/rounded_edittext"
                    />

                <ImageView
                    android:layout_width="@dimen/layx30"
                    android:layout_height="@dimen/layx30"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@id/home_edt_phone"
                    android:layout_marginLeft="@dimen/layx5"
                    android:background="@drawable/phone"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layy20"
                >

                <TextView
                    android:id="@id/home_tv_email"
                    android:layout_width="@dimen/layx100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    />

                <EditText
                    android:id="@id/home_edt_email"
                    android:layout_width="@dimen/layx350"
                    android:layout_height="@dimen/layy45"
                    android:layout_toRightOf="@id/home_tv_email"
                    android:paddingLeft="@dimen/layx35"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_20"
                    android:background="@drawable/rounded_edittext"
                    />

                <ImageView
                    android:layout_width="@dimen/layx30"
                    android:layout_height="@dimen/layx30"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@id/home_edt_email"
                    android:layout_marginLeft="@dimen/layx5"
                    android:background="@drawable/email"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layy20"
                >

                <TextView
                    android:id="@id/home_tv_work"
                    android:layout_width="@dimen/layx100"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:layout_centerVertical="true"
                    />

                <AutoCompleteTextView
                    android:id="@id/home_edt_work"
                    android:layout_width="@dimen/layx350"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/home_tv_work"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="@dimen/layx5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_20"
                    android:completionThreshold="1"
                    android:hint="Occupation"
                    />


            </RelativeLayout>

            <Button
                android:id="@id/home_btn_continues"
                android:layout_width="@dimen/layx180"
                android:layout_height="@dimen/layy50"
                android:paddingLeft="@dimen/layx35"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/layy50"
                android:background="@drawable/d_selector_button_right"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="CONTINUES"
                android:textSize="@dimen/text_size_18"
                />

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
