<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@id/l_main_dialog_select"
             android:background="#40000000"
             android:onClick="closeDialogTotalMessage"
             android:clickable="true"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/layx450"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/l_border_layout"
        android:padding="@dimen/layx10"
        android:gravity="center"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@id/dialog_select_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/layy5"
                    android:text="Australian Skilled Migration"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24"
                    android:visibility="visible"
                    android:textStyle="bold"
                    />

                <View
                    android:id="@id/dialog_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layx1"
                    android:layout_marginTop="@dimen/layy10"
                    android:background="@color/black"
                    android:visibility="visible" />
                <TextView
                    android:id="@id/dialog_tv_messeage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_22"
                    android:text=""
                    android:layout_marginTop="@dimen/layy5"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layy10"
                    >

                    <Button
                        android:layout_width="@dimen/layx180"
                        android:layout_height="@dimen/layy50"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Cancel"
                        android:paddingLeft="@dimen/layx30"
                        android:textSize="@dimen/text_size_18"
                        android:background="@drawable/d_selector_button"
                        android:layout_gravity="right"
                        android:id="@id/total_dialog_popup_btn_cancel"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@id/total_dialog_popup_btn_ok"
                        />

                    <Button
                        android:layout_width="@dimen/layx180"
                        android:layout_height="@dimen/layy50"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:text="SEND"
                        android:paddingLeft="@dimen/layx50"
                        android:textSize="@dimen/text_size_14"
                        android:background="@drawable/bg_btn_right"
                        android:layout_gravity="right"
                        android:id="@id/total_dialog_popup_btn_ok"
                        android:layout_marginTop="@dimen/layy10"
                        android:layout_marginBottom="@dimen/layy10"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/layx10"
                        />
                </RelativeLayout>

            </LinearLayout>

    </RelativeLayout>

</FrameLayout>